<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="@dimen/small_elevation"
    android:background="@drawable/ripple_effect_square_white_stroke"
    android:padding="@dimen/small_padding"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_marginEnd="@dimen/normal_margin"
    android:layout_marginStart="@dimen/normal_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/normal_icon"
            android:layout_height="@dimen/normal_icon"
            android:padding="@dimen/xxsmall_padding"
            android:id="@+id/imagePointA"
            android:src="@drawable/ic_blue_marker" />

        <TextView
            android:id="@+id/pointA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/normal_margin"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/imagePointA"
            android:text="Абая, 70" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/normal_icon"
            android:layout_height="@dimen/normal_icon"
            android:padding="@dimen/xxsmall_padding"
            android:id="@+id/imagePointB"
            android:src="@drawable/ic_green_marker" />

        <TextView
            android:id="@+id/pointB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/normal_margin"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/imagePointB"
            android:text="Абая, 70" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/normal_icon"
            android:layout_height="@dimen/normal_icon"
            android:padding="@dimen/xsmall_padding"
            android:id="@+id/imageSum"
            android:src="@drawable/ic_tenge"/>

        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/normal_margin"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/imageSum"
            android:text="900" />
        <TextView
            android:id="@+id/details"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/normal_margin"
            android:text="Детали"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="true"
            android:layout_marginEnd="@dimen/normal_margin"/>
    </RelativeLayout>
</LinearLayout>